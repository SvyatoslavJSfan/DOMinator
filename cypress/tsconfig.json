{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "allowJs": true,
    "isolatedModules": false,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../cypress.config.ts",
    "../node_modules/cypress"
  ]
}
