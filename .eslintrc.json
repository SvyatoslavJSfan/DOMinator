{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:i18next/recommended",
    "plugin:storybook/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "i18next",
    "react-hooks",
    "path-fixer-tralnotipsus",
    "unused-imports"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "unused-imports/no-unused-imports": "error",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".tsx"
        ]
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "indent": [
      "warn",
      4
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "no-unused-vars": "off",
    "react/require-default-props": "off",
    "react/function-component-definition": "off",
    "no-shadow": "off",
    "eslint-plugin-import/no-extraneous-dependencies": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign":"off",
    "import/no-duplicates": "off",
    "import/no-extraneous-dependencies": "off",
    "react/jsx-props-no-spreading": "off",
    "i18next/no-literal-string": [
      "error",
      {
        "markupOnly": true,
        "ignoreAttribute": [
          "data-testid",
          "to",
          "target",
          "direction",
          "justify",
          "align",
          "gap",
          "role",
          "as",
          "border",
          "feature"
        ]
      }
    ],
    "@typescript-eslint/ban-ts-comment": "off",
    "no-console": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "no-undef": "off",
    "react/no-array-index-key": "off",
    "path-fixer-tralnotipsus/path-checker": ["error", {"alias": "@"}],
    "path-fixer-tralnotipsus/public-api-imports": [
      "error", 
      {
        "alias": "@",
        "testFilesPatterns": ["**/*.test.*", "**/*.story.*", "**/StoreDecorator.tsx"]
      }
    ],
        "path-fixer-tralnotipsus/layer-imports": [
      "error", 
      {
        "alias": "@",
        "ignoreImportPatterns": ["**/StoreProvider", "**/testing"]
      }
    ],
    "react/no-unstable-nested-components": "warn"
  },
  "globals": {
    "__IS_DEV__": true,
    "__API_URL__": true,
    "__PROJECT__": true
  },
  "overrides": [
    {
      "files": [
        "node_modules/**",
        "**/src/**/*.{test,stories}.{ts, tsx}"
      ],
      "excludedFiles": [
        "node_modules/**"
      ],
      "rules": {
        "i18next/no-literal-string": "off",
        "max-len": "off"
      }
    },
    {
      "files": [
        "cypress/**/*.*"
      ],
      "rules": {
        "path-fixer-tralnotipsus/path-checker": "off",
        "path-fixer-tralnotipsus/public-api-imports": "off",
        "path-fixer-tralnotipsus/layer-imports": "off",
        "i18next/no-literal-string": "off",
        "@typescript-eslint/no-namespace": "off"
      }
    }
  ]
}