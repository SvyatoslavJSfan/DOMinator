{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "esModuleInterop": true,
      "types": ["msw","react", "react-dom"],
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true
    },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  }
  }